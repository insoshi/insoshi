<%- column_div :type => :primary do -%>
  <%- if logged_in? && current_person.has_unread_messages? -%>
    <div class="notice">
      You have unread messages in your mailbox.
      <%= link_to "Click here to see your messages",
                  messages_path %>
    </div>
  <%- end -%>
  <%- if logged_in? -%>
    <h2>Your Active Bids/Work</h2>
<%- if @bids.empty? -%>
    <h3 class="blankslate">No active bids</h3>
<%- else -%>
<ul class="list full">
    <%= render :partial => '/shared/bid', :collection => @bids %>
  </ul>
<%- end -%>
    <h2>Your Active Offers</h2>
<%- if @offers.empty? -%>
    <h3 class="blankslate">No active offers</h3>
<%- else -%>
<ul class="list full">
    <%= render :partial => '/offers/offer', :collection => @offers %>
  </ul>
<%- end -%>
    <h2>Your Active Requests</h2>
<%- if @reqs.empty? -%>
    <h3 class="blankslate">No active requests</h3>
<%- else -%>
<ul class="list full">
    <%= render :partial => '/reqs/req', :collection => @reqs %>
  </ul>
  <%- end -%>
  <%= render :partial => 'shared/recent_sent_exchanges' %>
<%- else -%>
  <%- unless global_prefs.app_name.blank? -%>
  <h2><%= global_prefs.app_name %> blog</h2>
  <%- else -%>
  <h2><%= Blog %></h2>
<%- end -%>
  <%- if @posts.empty? -%>
    <h3 class="blankslate">
      No posts yet!
    </h3>
  <%- else -%>
    <ul class="list blog full">
      <%= render :partial => 'posts/blog_post', :collection => @posts %>
    </ul>
  <%- end -%>
  
  <%= will_paginate(@posts) %>
<%- end -%>
<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'secondary_column' %>
<%- end -%>
