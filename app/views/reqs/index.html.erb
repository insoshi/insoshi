<%- column_div :type => :primary do -%>
<h2>Requests</h2>

<%- if @reqs.empty? -%>
    <h3 class="blankslate">No requests (yet!)</h3>
<%- else -%>
  <ul class="list full">
    <%= render :partial => 'req', :collection => @reqs %>
  </ul>
<%- end -%>
<br />

<%= link_to 'New req', new_req_path %>
<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'searches/box' %>
  <%= render :partial => 'shared/minifeed' %>
<%- end -%>
