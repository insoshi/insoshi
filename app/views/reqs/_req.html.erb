<li class="req">
  <a name="req_<%= req.id %>"></a>
  <div class="profile-image">
    <%= image_link req.person, :image => :thumbnail %>
    <%= image_tag "icons/new.gif", :class => "icon", :alt => "Request" %>
  </div>
  <p>
  <%= link_to h(req.name), req, :class => "show-follow" %> (<%= h req.estimated_hours %> hrs)
    Due: <%= relative_time_ago_in_words(req.due_date) %>
  </p>
  <p class="meta">
    <%= h req.categories[0].long_name unless req.categories.empty? %>
  </p>
  <p>
    <%= h req.description %>
  </p>
  <p class="meta">
    <%= render :partial => "shared/bid_message", :collection => approved_messages(req) %>
    <%= render :partial => "shared/bid_message", :collection => completed_messages(req) %>
    <%= render :partial => "shared/bid_message", :collection => commitment_messages(req) %>
    <%= render :partial => "shared/bid_message", :collection => accepted_messages(req) %>
    Created by <%= person_link req.person %>
    <%= time_ago_in_words(req.created_at) %> ago
    <% if current_person?(req.person) -%>
    | <%= link_to "Edit", edit_req_path(req) unless req.has_accepted_bid? %>
    <% end -%>
    <% if req.active? && ( admin? || current_person?(req.person) ) -%>
    | <%= link_to "Delete", req, :confirm => 'Are you sure?', :method => :delete unless (req.has_commitment? || req.has_approved? ) %>
    <% end -%>
    <br>
    <% if !current_person.address.nil? && !req.person.address.nil? && !current_person?(req.person) -%>
      <%= number_with_precision(req.person.address.distance_to(current_person.address), 1).to_s %> miles away
    <% end -%>
  </p>
</li>
